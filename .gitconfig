[credential "https://github.com"]
	helper = !/usr/bin/gh auth git-credential
[credential "https://gist.github.com"]
	helper = !/usr/bin/gh auth git-credential
[core]
	autocrlf = input
[color]
	ui = auto
	diff = auto
	status = auto
[init]
	defaultBranch = main
[alias]
	adog = log --all --decorate --oneline --graph
	staash = stash --all
	bblame = blame -w -C -C -C
	fpush = push --force-with-lease
[pull]
	rebase = true
[rerere]
	enabled = true
[branch]
	sort = -committerdate
[column]
	ui = auto
